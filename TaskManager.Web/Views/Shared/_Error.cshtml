@model String
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Resources.Common.Error</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/customCss")
    @*<link href="~/Content/PDWebCore/fontawesome/css/all.min.css" rel="stylesheet">*@
</head>
<body>
    <div class="container-fluid">
        <div class="row form-group mt-3">
            <div class="col-sm">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-sm float-right">
                    <i class="fa fa-chevron-left button-icon" aria-hidden="true"></i>@Resources.Common.Back
                </a>
            </div>
            <div class="w-100">
            </div>
            <div class="col-sm">
                <h2>
                    @Resources.Common.Error
                </h2>
                <h5>
                    @Resources.Common.ErrorOccuredDetailsWeb
                </h5>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @if (Model != null)
                {
                    <p class="text-justify">
                        @Model
                    </p>
                }
                else
                {
                    <p>
                        @(Resources.ErrorMessages.ErrorOccuredOnRequest).
                    </p>
                }
            </div>
        </div>
    </div>
    <hr />
</body>
</html>
